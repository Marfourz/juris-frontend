{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "src/**/*", "src/**/*.vue"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "types": ["node"],
    "noEmit": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
  }
}
